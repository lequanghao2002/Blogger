<div class="col-sm-12 col-md-9 col-md-offset-3 col-lg-3 col-lg-offset-0" id="sidebar-rightedt">
    <div class="sidebar-right section" id="sidebar-right">
        <div class="widget Label" data-version="1" id="Label1" @*style="
    border-bottom: 1px solid #e1e2e3; padding-bottom: 20px;"*@>
            <h2>
                Danh mục
            </h2>
            
                <ul>
                    @if (ViewBag.listAllCategories != null)
                    {
                        @foreach (var category in ViewBag.listAllCategories)
                        {
                            <li>
                                <a dir="ltr" href="~/Home?categoryID=@category.ID">
                                    @category.Name
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li>
                            <a dir="ltr" href="">
                                Bug
                            </a>
                        </li>
                    }


                </ul>
                <div class="clear"></div>
        </div>

        
    </div>

    <div style="display: inline-block; border-top: 1px solid #e1e2e3;
    margin-top: 40px;">
        <h2>
            Theo dõi blog qua email
        </h2>
        <p>Nhập email để được thông báo mỗi khi blog có bài viết mới</p>
            <form method="get" action="~/Home/Test">
                <div class="" style="display: flex">
                    <input type="text" id="txtKeyword" class="search-field form-control" name="keyword" placeholder="Nhập email..." style="margin-bottom: 0; width:100%">
                    <button type="submit" id="btnSearch">
                        Gửi
                    </button>
                </div>
            </form>

    </div>

    
